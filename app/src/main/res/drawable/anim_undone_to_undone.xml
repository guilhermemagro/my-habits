<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <group
                android:name="line_group"
                android:pivotX="12"
                android:pivotY="12">
                <path
                    android:name="line"
                    android:pathData="M 7 11 L 7 13 L 17 13 L 17 11 L 7 11 Z"
                    android:fillColor="#ef5350"/>
            </group>
            <group
                android:name="circle_group"
                android:pivotX="12"
                android:pivotY="12">
                <path
                    android:name="circle"
                    android:pathData="M 12 2 C 6.48 2 2 6.48 2 12 C 2 17.52 6.48 22 12 22 C 17.52 22 22 17.52 22 12 C 22 6.48 17.52 2 12 2 Z M 12 20 C 7.59 20 4 16.41 4 12 C 4 7.59 7.59 4 12 4 C 16.41 4 20 7.59 20 12 C 20 16.41 16.41 20 12 20 Z"
                    android:fillColor="#ef5350"/>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="circle">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="pathData"
                    android:duration="800"
                    android:valueFrom="M 12 2 C 6.48 2 2 6.48 2 12 C 2 17.52 6.48 22 12 22 C 17.52 22 22 17.52 22 12 C 22 6.48 17.52 2 12 2 Z M 12 20 C 7.59 20 4 16.41 4 12 C 4 10.53 4.399 9.151 5.094 7.966 C 5.789 6.781 6.781 5.789 7.966 5.094 C 9.151 4.399 10.53 4 12 4 C 16.41 4 20 7.59 20 12 C 20 16.41 16.41 20 12 20 Z"
                    android:valueTo="M 12 2 C 6.48 2 2 6.48 2 12 C 2 17.52 6.48 22 12 22 C 17.52 22 22 17.52 22 12 C 22 6.48 17.52 2 12 2 Z M 10 17 C 8.333 15.333 6.667 13.667 5 12 C 5.47 11.53 5.94 11.06 6.41 10.59 C 7.607 11.783 8.803 12.977 10 14.17 C 12.53 11.64 15.06 9.11 17.59 6.58 C 18.06 7.053 18.53 7.527 19 8 C 16 11 13 14 10 17 Z"
                    android:valueType="pathType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="fillColor"
                    android:duration="800"
                    android:valueFrom="#ef5350"
                    android:valueTo="#9ccc65"
                    android:valueType="colorType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
    <target android:name="line">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="pathData"
                    android:duration="800"
                    android:valueFrom="M 7 11 L 7 13 L 17 13 L 17 11 L 7 11 Z"
                    android:valueTo="M 12 12 L 12 12 L 12 12 L 12 12 L 12 12 Z"
                    android:valueType="pathType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="fillColor"
                    android:duration="800"
                    android:valueFrom="#ef5350"
                    android:valueTo="#9ccc65"
                    android:valueType="colorType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
    <target android:name="line_group">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="rotation"
                android:duration="800"
                android:valueFrom="0"
                android:valueTo="-225"
                android:valueType="floatType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
    <target android:name="circle_group">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="rotation"
                android:duration="800"
                android:valueFrom="270"
                android:valueTo="0"
                android:valueType="floatType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
</animated-vector>
